<div class="row no-gutters">
	<div class="col-lg-1">
	</div>
	<div class="col-lg-10 font-white text-center">
		<h2 class="border-bottom">日記一覧</h2>
		<div class="row no-gutters mb-5">
			<%= link_to new_diary_path(group_id: @group.id), class: "btn btn-outline-success form-control" do %>
				<i class="fas fa-edit link-footer-font"></i>　日記を投稿する
			<% end %>
		</div>
		<div class="scroll">
			<table class="table-borderless" style="width: 100%;">
				<% @diaries.each do |diary| %>
					<tr>
						<th class="pb-5" style="width: 50%;">
							<%= link_to diary_path(group_id: @group, id: diary) do %>
								<% if diary.image? %>
									<%= image_tag diary.image.url, width: 200, height: 200, class: "square" %>
								<% else %>
									<%= image_tag 'NO_IMAGE.png', width: 200, height: 200, class: "square" %>
								<% end %>
							<% end %>
						</th>
						<td class="pb-5" style="width: 50%; text-align: left;">
							<h4 class="theme-color">
								<%= link_to diary.title, diary_path(group_id: diary.group_id, id: diary.id), class: "theme-color" %>
							</h4>
							<p>投稿者:<%= link_to diary.user.name, user_path(id: diary.user.id), class: "theme-color" %></p>
							<p><%= diary.created_at.strftime("%Y年%m月%d日 %H時%M分") %></p>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>