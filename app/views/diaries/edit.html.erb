<div class="row no-gutters font-white">
	<div class="offset-sm-3 col-sm-6">	
		<%= form_with(model: @diary, url: group_diary_path(group_id: @group.id, id: @diary.id), local: true, method: :patch) do |f| %>

			<div class="field">
				<%= f.label :title, "タイトル" %>
				<%= f.text_field :title, class: "form-control", style: "color: black;", required: true %>
			</div>
			<br>
			<div class="field">
				<%= f.label :image, "サムネイル" %>
				<br>
				<%= f.file_field :image, class: "form-control file" %>
				<%= f.hidden_field :image_cache %>
			</div>
			<% if @diary.image? %>
				<div class="thmbnail text-center mt-5">
					<%= image_tag @diary.image.url, width: 150, height: 150, class: "square" %>
				</div>
			<% end %>

			<div class="text-center">
				<% if @diary.persisted? && @diary.image? %>
					<label class="font-white">
						<%= f.check_box :remove_image %>
						画像を削除
					</label>
				<% end %>
			</div>
			<br>
			<div class="field">
				<%= f.text_area :body, required: true%>
			</div>
			<br>
			<div class="field">
				<%= f.radio_button :private_status, "closed", checked: "checked" %>
				<%= f.label :private_status, "グループのみ表示する" %>
			</div>

			<div class="field">
				<%= f.radio_button :private_status, "open" %>
				<%= f.label :private_status, "マイページにも表示する" %>
			</div>

			<%= f.hidden_field :user_id, value: @diary.user_id %>
			<%= f.hidden_field :group_id, value: @diary.group_id %>

			<div class="action">
				<%= f.submit '編集完了', class: "btn btn-outline-success form-control" %>
			</div>
		<% end %>
		<script>
			new FroalaEditor('#diary_body',{})
		</script>
		<%= link_to '戻る', group_diary_path(group_id: @group.id, id: @diary.id), class: "btn form-control btn-outline-danger" %>
	</div>
</div>