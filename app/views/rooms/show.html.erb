<div class="row no-gutters font-white" id="side-delete">
	<div class="col-lg-12">
		<div class="chat-scroll">

				<%= render "direct_message", collection: @direct_messages %>
			<div id="direct_messages">
			</div>
		</div>
	</div>
</div>
<div class="row no-gutters message-form">
	<div class="offset-lg-6 col-lg-6">
		<div class="row no-gutters" style="width: 100%;">
			<div class="col-lg-9" style="padding: 1px; width: 80%;">
				<input class="form-control" id="direct-chat" type="text" data-behavior="room_speaker" data-user="<%= current_user.id %>" data-room="<%= @room.id %>" required="required">
			</div>
			<div class="col-lg-3" style="padding: 1px; width: 20%;">
				<button id="direct-submit" class="btn btn-success form-control" type="button">投稿</button>
			</div>
		</div>
	</div>
</div>