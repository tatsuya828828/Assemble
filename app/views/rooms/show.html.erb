<div class="row no-gutters font-white">
	<div class="col-lg-3">
	</div>
	<div class="col-lg-6">
		<h4><%= link_to @user.name, user_path(@user), class: "theme-color" %></h4>
		<div class="chat-scroll">

				<%= render "direct_message", collection: @direct_messages %>
			<div id="direct_messages">
			</div>
		</div>
	</div>
</div>
<div class="row no-gutters side-space">
	<div class="offset-lg-3 col-lg-6">
		<div class="row no-gutters">
			<div class="col-lg-9" style="padding: 1px;">
				<input class="form form-control" id="direct-chat" type="text" data-behavior="room_speaker" data-user="<%= current_user.id %>" data-room="<%= @room.id %>" required="required">
			</div>
			<div class="col-lg-3" style="padding: 1px; ">
				<button id="direct-submit" class="btn btn-outline-success form-control" type="button">投稿</button>
			</div>
		</div>
	</div>
</div>