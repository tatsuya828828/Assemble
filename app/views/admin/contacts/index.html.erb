<div class="row no-gutters">
  <div class="col-lg-3">
  </div>
  <div class="col-lg-6">
    <h2>お問い合わせ一覧</h2>
    <table class="table table-tabs">
      <thead>
        <tr class="tab-menu" style="width: 100%;">
          <th style="width: 25%;">
            <a href="#all" class="active">全て</a>
          </th>
          <th style="width: 25%;">
            <a href="#unconfirmed" class="">未確認</a>
          </th>
          <th style="width: 25%;">
            <a href="#before_reply" class="">未返信</a>
          </th>
          <th style="width: 25%;">
            <a href="#already_replyed" class="">返信済み</a>
          </th>
        </tr>
      </thead>
      <tbody id="all">
        <% @contacts.reverse_each do |contact| %>
        <tr>
          <td>
            <p>
              <%= link_to contact.title, admin_contact_path(contact) %>
              <% if contact.confirm_status == "unconfirmed" %>
              <span style="background-color: #DC3545; color: #fff; padding: 1px;">New</span>
              <% end %>
            </p>
          </td>
          <td>
            <p><%= link_to contact.user.self_id, admin_user_path(contact.user) %></p>
          </td>
          <td>
            <p><%= contact.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
          </td>
          <td>
            <p>
              <% if contact.response_status == "before_reply" %>
              <span style="background-color: #DC3545; color: #fff; padding: 1px;">
                <% else %>
                <span style="background-color: #28A745; color: #fff; padding: 1px;">
                  <% end %>
                  <%= contact.response_status_i18n %></span>
            </p>
          </td>
        </tr>
        <% end %>
      </tbody>

      <tbody id="unconfirmed">
        <% @contacts.reverse_each do |contact| %>
        <% if contact.confirm_status == "unconfirmed" %>
        <tr>
          <td>
            <p>
              <%= link_to contact.title, admin_contact_path(contact) %>
              <span style="background-color: #DC3545; color: #fff; padding: 1px;">New</span>
            </p>
          </td>
          <td>
            <p><%= link_to contact.user.self_id, admin_user_path(contact.user) %></p>
          </td>
          <td>
            <p><%= contact.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
          </td>
          <td>
            <p>
              <% if contact.response_status == "before_reply" %>
              <span style="background-color: #DC3545; color: #fff; padding: 1px;">
                <% else %>
                <span style="background-color: #28A745; color: #fff; padding: 1px;">
                  <% end %>
                  <%= contact.response_status_i18n %></span>
            </p>
          </td>
        </tr>
        <% end %>
        <% end %>
      </tbody>

      <tbody id="before_reply">
        <% @contacts.reverse_each do |contact| %>
        <% if contact.reply.nil? %>
        <tr>
          <td>
            <p>
              <%= link_to contact.title, admin_contact_path(contact) %>
              <% if contact.confirm_status == "unconfirmed" %>
              <span style="background-color: #DC3545; color: #fff; padding: 1px;">New</span>
              <% end %>
            </p>
          </td>
          <td>
            <p><%= link_to contact.user.self_id, admin_user_path(contact.user) %></p>
          </td>
          <td>
            <p><%= contact.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
          </td>
          <td>
            <p>
              <% if contact.response_status == "before_reply" %>
              <span style="background-color: #DC3545; color: #fff; padding: 1px;">
                <% else %>
                <span style="background-color: #28A745; color: #fff; padding: 1px;">
                  <% end %>
                  <%= contact.response_status_i18n %></span>
            </p>
          </td>
        </tr>
        <% end %>
        <% end %>
      </tbody>

      <tbody id="already_replyed">
        <% @contacts.reverse_each do |contact| %>
        <% if contact.reply.present? %>
        <tr>
          <td>
            <p>
              <%= link_to contact.title, admin_contact_path(contact) %>
              <% if contact.confirm_status == "unconfirmed" %>
              <span style="background-color: #DC3545; color: #fff; padding: 1px;">New</span>
              <% end %>
            </p>
          </td>
          <td>
            <p><%= link_to contact.user.self_id, admin_user_path(contact.user) %></p>
          </td>
          <td>
            <p><%= contact.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
          </td>
          <td>
            <p>
              <% if contact.response_status == "before_reply" %>
              <span style="background-color: #DC3545; color: #fff; padding: 1px;">
                <% else %>
                <span style="background-color: #28A745; color: #fff; padding: 1px;">
                  <% end %>
                  <%= contact.response_status_i18n %></span>
            </p>
          </td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
