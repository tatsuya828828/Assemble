<div class="row font-white">
  <div class="col-lg-3 mb-3 text-center">
    <% if user_signed_in? && (@user == current_user) %>
      <h5 class="mb-3">
        <%= link_to '日記を投稿する', new_diary_path, class: "link" %>
      </h5>
    <% end %>
    <div class="pb-2">
      <% if @user.image? %>
        <%= image_tag @user.image.url, width: 150, height: 150, class: "circle" %>
      <% else %>
        <%= image_tag "NO_IMAGE.png", width: 150, height: 150, class: "circle" %>
      <% end %>
    </div>
    <br>
    <%= @user.name %>
    <% if user_signed_in? %>
      <div class="mt-3">
        <% if @user == current_user %>
          <%= link_to '編集する', edit_user_path(@user), class: "btn btn-outline-success form-control" %>
          <%= link_to '友人一覧へ', user_friends_path(current_user.id), class: "btn btn-outline-primary form-control" %>
        <% else %>
          <% if current_user.friend?(@user) %>
            <%= link_to '削除', user_friend_path(user_id: current_user.id, id: @user_info.id), method: :delete, class: "btn btn-outline-danger form-control" %>
            <p>グループにさそう</p>
          <% elsif current_user.wait_self?(@user) %>
            申請中です
            <%= link_to '取り消す', user_friend_path(user_id: current_user.id, id: @user_info.id), method: :delete, class: "btn btn-outline-danger form-control" %>
          <% elsif current_user.waiting_other_user?(@user) %>
            申請が来ています
            <%= link_to '承認する', user_friend_path(user_id: current_user.id, id: @user_info.id), method: :put, class: "btn btn-outline-success form-control" %>
            <%= link_to '拒否する', user_friend_path(user_id: current_user.id, id: @user_info.id), method: :delete, class: "btn btn-outline-danger form-control" %>
          <% else %>
            <%= form_with(url: user_friends_path(user_id: current_user.id), local: true) do |f| %>
              <%= f.hidden_field :sender_id, value: current_user.id %>
              <%= f.hidden_field :receiver_id, value: @user.id %>
              <%= f.hidden_field :request_status, value: "waiting_for_allow" %>
              <%= f.submit '友達になる', class: "btn btn-outline-success form-control" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <% if @user == current_user %>
        <div>
          <div class="text-center mt-3 mb-5">
            <h6>
              <%= link_to "保留中", user_path, class: "link theme-color" %>
              |
              <%= link_to "申請中", user_path(request: "send"), class: "link theme-color" %>
            </h6>
          </div>
          <% if @friend_requests.present? %>
            <div style="overflow: auto; height: 300px;">
              <% @friend_requests.each do |request| %>
                <% if request.receiver_id == current_user.id %>
                  <div class="mb-3">
                    <% if request.sender.image? %>
                      <%= image_tag request.sender.user.image.url, width: 150, height: 150, class: "circle" %>
                    <% else %>
                      <%= image_tag "NO_IMAGE.png", width: 150, height: 150, class: "circle" %>
                    <% end %>
                  </div>
                  <br>
                  <%= request.sender.name %>
                
                  <%= link_to '承認する', user_friend_path(user_id: current_user.id, id: request.id),method: :put, class: "btn btn-outline-success form-control" %>
                  <%= link_to '拒否する', user_friend_path(user_id: current_user.id, id: request.id), method: :delete, class: "btn btn-outline-danger form-control" %>
                <% else %>
                  <div class="mb-3">
                    <% if request.receiver.image? %>
                      <%= image_tag request.receiver.user.image.url, width: 150, height: 150, class: "circle" %>
                    <% else %>
                      <%= image_tag "NO_IMAGE.png", width: 150, height: 150, class: "circle" %>
                    <% end %>
                  </div>
                  <br>
                  <%= request.receiver.name %>
                  <%= link_to '取り消す', user_friend_path(user_id: current_user.id, id: request.id), method: :delete, class: "btn btn-outline-danger form-control" %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="col-lg-9 font-white text-center">
    <h2 class="mb-5 border-bottom">日記一覧</h2>
    <div style="height: 650px; overflow: auto; ">
      <% @diaries.each do |diary| %>
          <div class="row no-gutters mb-5">
            <div class="col-lg-3" style="height: 200px;">
              <%= link_to diary_path(diary) do %>
                <% if diary.image? %>
                  <%= image_tag diary.image.url, width: 200, height: 200, class: "square" %>
                <% else %>
                  <%= image_tag 'NO_IMAGE.png', width: 200, height: 200, class: "square" %>
                <% end %>
              <% end %>
            </div>
            <div class="col-lg-6 mt-3 mb-3" style="text-align: left; height: 100px;">
              <div style="width: 65%; margin: 0 auto; height: 200px; line-height: 40px;">
                <h3 class="theme-color" style="">
                  <%= link_to diary.title, diary_path(diary), class: "theme-color" %>
                </h3>
                <%= diary.private_status %>
                <br>
                <h8>
                  投稿日時<br><%= diary.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
                </h8>
              </div>
            </div>
            <div class="col-lg-3">
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>