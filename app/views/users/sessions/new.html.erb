<div class="row no-gutters font-white">
  <div class="offset-lg-4">
  </div>
  <div class="col-lg-4">
    <div>
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :self_id, :ユーザーID %><br />
        <%= f.text_field :self_id, autocomplete: "self_id", required: true, class: "form-control form" %>
      </div>

      <div class="field">
       <%= f.label :password, :パスワード %><br />
       <%= f.password_field :password, autocomplete: "current-password", required: true, class: "form-control form" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
         <%= f.check_box :remember_me %>
         <%= f.label :remember_me, :保存する %>
        </div>
      <% end %>

      <div class="actions">
       <%= f.submit "ログイン", class: "btn btn-outline-primary form-control" %>
      </div>
      <% end %>
      <div class="text-center">
        <p class="font-white mt-3"><small>または</small></p>
      </div>
      <%= link_to "新規登録", new_registration_path(resource_name), class: "btn btn-outline-success form-control" %>
      <br>
      <div class="row no-gutters">
        <div class="offset-lg-6">
          <small><%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "link" %></small>
        </div>
      </div>
    </div>
  </div>
</div>


