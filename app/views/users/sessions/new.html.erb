<div class="row">
  <div class="offset-md-4">
  </div>
  <div class="col-md-4">

    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="field">
       <%= f.label :self_id, :ユーザーID %><br />
       <%= f.text_field :self_id, autofocus: true, autocomplete: "self_id", required: true, class: "form-control" %>
     </div>

     <div class="field">
       <%= f.label :password, :パスワード %><br />
       <%= f.password_field :password, autocomplete: "current-password", required: true, class: "form-control" %>
     </div>

     <% if devise_mapping.rememberable? %>
       <div class="field">
         <%= f.check_box :remember_me %>
         <%= f.label :remember_me, :保存する %>
       </div>
     <% end %>

     <div class="actions">
       <%= f.submit "ログイン", class: "btn theme-color form-control" %>
     </div>
    <% end %>
    <div style="text-align: center;">
      <p><small>または</small></p>
    </div>
    <%= link_to "新規登録", new_registration_path(resource_name), class: "btn theme-color form-control" %>
    <br>
    <small><%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name) %></small>


