<div class="row font-white">
  <div class="offset-md-4">
  </div>
  <div class="col-md-4 side-space">
    <div>
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :image, "サムネイル" %>
          <%= f.file_field :image, class: "form-control file" %>
          <%= f.hidden_field :image_cache %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: "taro1@gmail.com" ,class: "form-control form" %>
        </div>

        <div class="field">
          <%= f.label :name, "ユーザー名" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true, placeholder: "たろう",class: "form-control form" %>
        </div>

        <div class="field">
          <%= f.label :self_id, "ログインID" %><br />
          <%= f.text_field :self_id, autofocus: true, autocomplete: "self_id", required: true, placeholder: "taro1",class: "form-control form" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード(6文字以上)" %>
          <br />
          <%= f.password_field :password, autocomplete: "new-password", required: true,placeholder: "******",class: "form-control form" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認)" %>
          <br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true,placeholder: "******",class: "form-control form" %>
          <br>
        </div>

        <div class="actions">
         <%= f.submit "登録", class: 'btn btn-outline-success form-control' %>
        </div>
      <% end %>
      <div class="text-center">
        <p class="font-white mt-3"><small>または</small></p>
      </div>
      <div>
        <%= link_to "ログイン", new_session_path(resource_name), class: "btn btn-outline-primary form-control" %>
      </div>
    </div>
  </div>
</div>