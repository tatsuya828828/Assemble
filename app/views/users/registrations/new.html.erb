<div class="row">
  <div class="offset-md-4">
  </div>
  <div class="col-md-4">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email, :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: "taro1@gmail.com" ,class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :name, :ユーザー名 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true, placeholder: "たろう",class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :self_id, :ユーザーID %><br />
        <%= f.text_field :self_id, autofocus: true, autocomplete: "self_id", required: true, placeholder: "taro1",class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password, :パスワード %>
        <em>(6文字以上)</em>
        <br />
        <%= f.password_field :password, autocomplete: "new-password", required: true,placeholder: "******",class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, :パスワード %>
        <em>(確認用)</em>
        <br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true,placeholder: "******",class: "form-control" %>
        <br>
      </div>

      <div class="actions">
       <%= f.submit "登録する", class: 'btn theme-color form-control' %>
      </div>
    <% end %>
    <div style="text-align: center;">
      <p><small>または</small></p>
    </div>
    <div>
      <%= link_to "ログイン", new_session_path(resource_name), class: "btn theme-color form-control" %>
    </div>
  </div>
</div>